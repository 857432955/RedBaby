<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="80dp">

    <ImageView
        android:id="@+id/record_iv"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        android:src="@drawable/bar_class_normal"
        />

    <TextView
        android:id="@+id/brand_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="品牌"
        android:layout_alignTop="@+id/record_iv"
        android:layout_alignLeft="@+id/now_money_tv"
        android:layout_alignStart="@+id/now_money_tv"/>

    <TextView
        android:id="@+id/now_money_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="现在的价格"
        android:layout_alignTop="@+id/old_money_tv"
        android:layout_toRightOf="@+id/record_iv"
        android:layout_toEndOf="@+id/record_iv"
        android:layout_marginLeft="38dp"
        android:layout_marginStart="38dp"/>

    <TextView
        android:id="@+id/old_money_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="以前的价格"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="73dp"
        android:layout_marginEnd="73dp"/>

    <TextView
        android:id="@+id/talk_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="评论"
        android:layout_alignBottom="@+id/record_iv"
        android:layout_alignLeft="@+id/now_money_tv"
        android:layout_alignStart="@+id/now_money_tv"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/arrow"
        android:layout_marginRight="25dp"
        android:layout_marginEnd="25dp"
        android:layout_alignBottom="@+id/old_money_tv"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>
</RelativeLayout>