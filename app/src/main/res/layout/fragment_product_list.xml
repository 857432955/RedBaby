<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <include
        android:id="@+id/limit_title"
        layout="@layout/base_title"/>

    <RadioGroup
        android:id="@+id/rg_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="15dp">

        <RadioButton
            android:id="@+id/rb_sale"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/selector_product_order_sales"
            android:button="@null"
            android:checked="true"
            android:gravity="center"
            android:padding="5dp"
            android:text="销量"
            android:textColor="@color/product_order"
            android:textSize="18sp"/>

        <RadioButton
            android:id="@+id/rb_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/price_center_up_selected"
            android:button="@null"
            android:gravity="center"
            android:padding="5dp"
            android:text="价格"
            android:textColor="@color/product_order"
            android:textSize="18sp"/>

        <RadioButton
            android:id="@+id/rb_shelves"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/selector_product_order_shelves"
            android:button="@null"
            android:gravity="center"
            android:padding="5dp"
            android:text="上架时间"
            android:textColor="@color/product_order"
            android:textSize="18sp"/>
    </RadioGroup>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="10dp"
        android:background="#999"/>

    <ListView
        android:id="@+id/lv_product_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="#999"
        android:dividerHeight=".5dp">

    </ListView>
</LinearLayout>