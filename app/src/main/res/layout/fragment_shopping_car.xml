<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:id="@+id/fraHead"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:background="@drawable/head_bg" >
        <TextView
            style="@style/style_18_BEBEBE_BOLD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="购物车" />
    </FrameLayout>

    <LinearLayout
        android:background="@drawable/shape_rounded_selectable1"
        android:layout_margin="10dp"
        android:padding="5dp"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5.0dip"
                android:text="数量总计："
                android:textColor="#ff4b4b4b"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/shopcar_total_buycount_text_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:paddingRight="5.0dip"
                android:text="55"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5.0dip"
                android:text="赠送积分总计："
                android:textColor="#ff4b4b4b"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/shopcar_total_bonus_text_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:paddingRight="5.0dip"
                android:text="5500"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5.0dip"
                android:text="金额总计(不含运费)："
                android:textColor="#ff4b4b4b"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/shopcar_total_money_text_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:paddingRight="5.0dip"
                android:text="￥：6500"
                android:textColor="#f00"
                android:textSize="18sp"/>
        </RelativeLayout>

    </LinearLayout>






    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10.0dip"
        android:layout_marginRight="10.0dip"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="2.0dip"
            android:paddingTop="5.0sp"
            android:text="商品明细"
            android:textColor="#ff000000"
            android:textSize="18sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ListView
            android:id="@+id/shopcar_product_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:layout_centerHorizontal="true"
            android:layout_margin="10.0dip"
            android:cacheColorHint="#00000000"
            android:footerDividersEnabled="false"
            android:headerDividersEnabled="true"/>

        <TextView
            android:id="@+id/shopcar_bottom_toPay_text"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="0.4"
            android:layout_gravity="center"
            android:background="@drawable/button_long"
            android:gravity="center"
            android:text=" 结 算"
            android:textColor="#ffffffff"
            android:textSize="17sp"/>


    </LinearLayout>

</LinearLayout>
