<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:background="@drawable/shape_rounded_selectable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/shopcar_item_prodImage_rel"
        android:layout_width="82.0dip"
        android:layout_height="82.0dip"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10.0dip">

        <ImageView
            android:id="@+id/shopcar_item_prodImage_img"
            android:layout_width="80.0dip"
            android:layout_height="80.0dip"
            android:layout_centerInParent="true"
            android:src="@drawable/bar_search_selected"/>
    </RelativeLayout>


    <Button
        android:clickable="true"
        android:focusable="false"
        android:id="@+id/delete"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:background="@drawable/selector_shop_car"
        android:onClick="delete"/>

    <LinearLayout
        android:id="@+id/shopcar_item_prod_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="5.0dip"
        android:paddingRight="5.0dip"
        android:paddingTop="5.0dip"
        android:layout_alignBottom="@+id/shopcar_item_prodImage_rel"
        android:layout_toRightOf="@+id/shopcar_item_prodImage_rel"
        android:layout_toEndOf="@+id/shopcar_item_prodImage_rel">

        <TextView
            android:id="@+id/shopcar_item_prodName_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:paddingRight="15.0dip"
            android:text="毛衣FAGA7777"
            android:textColor="#000"
            android:textSize="15sp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:text="数量："/>

            <TextView
                android:id="@+id/shopcar_item_prodId_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:text="1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:text="尺码："/>

            <TextView
                android:id="@+id/shopcar_item_prodPrice_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:text="M"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:text="颜色："/>

            <TextView
                android:id="@+id/shopcar_item_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:text="黑"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:text="价格："/>

            <TextView
                android:id="@+id/shopcar_item_prodPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:text="￥181.00"
                android:textColor="#f00"
                android:textSize="18sp"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="小计："
                android:textColor="#f00"/>

            <TextView
                android:id="@+id/shopcar_item_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:text="￥181.00"
                android:textColor="#f00"
                android:textSize="18sp"/>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>