<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >
    <android.support.v4.view.ViewPager
        android:id="@+id/bg_vp"
        android:layout_width="match_parent"
        android:layout_height="450dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/item_qiegexian"/>

    <RelativeLayout
        android:background="@drawable/segment_normal_2_bg"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <!-- 指针容器 -->
        <LinearLayout
            android:layout_centerInParent="true"
            android:id="@+id/indicator2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/item_qiegexian"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp">
        <TextView
            android:id="@+id/tv_12"
            android:text="男童圆领毛衣KGME081101"
            android:textSize="18dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_22"
            android:layout_below="@+id/tv_12"
            android:text="市场价:￥"
            android:textSize="18dp"
            android:layout_marginTop="13dp"
            android:layout_marginLeft="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_markmoney2"
            android:text="360.00"
            android:layout_below="@+id/tv_12"
            android:layout_marginLeft="105dp"
            android:textSize="18dp"
            android:layout_marginTop="13dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_32"
            android:text="会员价:￥"
            android:textSize="18dp"
            android:textColor="#FF0000"
            android:layout_below="@+id/tv_22"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="13dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_vipmoney2"
            android:text="182.00"
            android:textSize="18dp"
            android:textColor="#FF0000"
            android:layout_below="@+id/tv_22"
            android:layout_marginLeft="105dp"
            android:layout_marginTop="13dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_42"
            android:text="商品评级:"
            android:textSize="18dp"
            android:layout_below="@+id/tv_12"
            android:layout_alignParentRight="true"
            android:layout_marginRight="100dp"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <RatingBar
            android:id="@+id/rb_star2"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_marginTop="21dp"
            android:layout_marginRight="28dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tv_12"
            android:progressDrawable="@drawable/layer_list_ratingbar_bg"
            android:isIndicator="true"
            android:rating="3.5"/>
    </RelativeLayout>

</LinearLayout>