<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:clickable="false">

    <FrameLayout
        android:id="@+id/title_address_full"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/head_bg">

        <TextView
            android:id="@+id/head_addaddress_back"
            style="@style/style_15_EBEBEB_BOLD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="5dp"
            android:background="@drawable/selector_headbutton"
            android:clickable="true"
            android:padding="8dp"
            android:text=" 地址管理 "/>

        <TextView
            style="@style/style_18_BEBEBE_BOLD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="新增地址"/>

        <TextView
            android:id="@+id/tv_saveaddres"
            style="@style/style_15_EBEBEB_BOLD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_margin="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/selector_headbutton"
            android:clickable="true"
            android:padding="8dp"
            android:text="保存"/>

    </FrameLayout>

    <LinearLayout
        android:clickable="false"
        android:id="@+id/login_name_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dip"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"
        android:layout_marginTop="10.0dip"
        android:background="@drawable/shape_rounded_rectangle"
        android:orientation="horizontal"
        android:paddingTop="5dip">

        <TextView
            android:layout_width="80.0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:clickable="false"
            android:text="收货人："
            android:textSize="15.0sp"/>

        <EditText
            android:id="@+id/login_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="(必填)"
            android:textColor="#000"
            android:textSize="15sp"
/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_name_layout"
        android:layout_centerHorizontal="true"
        android:layout_margin="5.0dip"
        android:background="@drawable/shape_rounded_selectable"
        android:orientation="horizontal"
        android:paddingTop="5dip">

        <TextView
            android:layout_width="80.0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:text="手机："
            android:textSize="15.0sp"/>

        <EditText
            android:id="@+id/phonenumber_address"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="(必填)"
            android:textColor="#000"
            android:textSize="15.0sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_name_layout"
        android:layout_centerHorizontal="true"
        android:layout_margin="5.0dip"
        android:background="@drawable/shape_rounded_selectable"
        android:orientation="vertical"
        android:paddingTop="5dip">
     <Spinner
         android:id="@+id/address_sheng_sp"
         android:layout_width="match_parent"
         android:layout_height="wrap_content">
     </Spinner>
        <Spinner
            android:id="@+id/address_shi_sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </Spinner>
      <!--  <Spinner
            android:id="@+id/address_xian_sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </Spinner>-->
       <!-- <TextView
            android:layout_width="80.0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:text="省市区："
            android:textSize="15.0sp"/>

        &lt;!&ndash;<TextView
            android:id="@+id/tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="点击选择地址"
            android:layout_centerInParent="true"
            android:textSize="15sp"/>&ndash;&gt;

        <EditText
            android:id="@+id/provice_address"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="(必选)"
            android:textColor="#000"
            android:textSize="15.0sp"/>-->
    </LinearLayout>

    <LinearLayout
        android:id="@+id/login_pwd_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_name_layout"
        android:layout_centerHorizontal="true"
        android:layout_margin="5.0dip"
        android:background="@drawable/shape_rounded_selectable"
        android:orientation="horizontal"
        android:paddingTop="5dip">

        <TextView
            android:layout_width="80.0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:text="详细地址："
            android:textSize="15.0sp"/>

        <EditText
            android:id="@+id/address_detail"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="(必填)"
            android:textColor="#000"
            android:textSize="15.0sp"/>
    </LinearLayout>

</LinearLayout>