<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/search"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:weightSum="1">

    <include layout="@layout/base_title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/relSearch"
            android:layout_width="match_parent"
            android:layout_height="39.0dip"
            android:background="@drawable/home_search3">

            <EditText
                android:id="@+id/editSearchInfo"
                android:layout_width="220dip"
                android:layout_height="39.0dip"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="35dp"
                android:background="@android:color/transparent"
                android:hint="请输入关键字"
                android:maxLength="26"
                android:textColor="#ff4b4b4b"
                android:textSize="14dp"/>

            <ImageButton
                android:id="@+id/home_searchok"
                android:layout_width="43.0dip"
                android:layout_height="60.0dip"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dip"
                android:background="@drawable/search_selector"/>
        </RelativeLayout>
    </LinearLayout>

    <include layout="@layout/search_activity"/>

</LinearLayout>