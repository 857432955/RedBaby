<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="4dp"
    android:paddingRight="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="230dp">
            <TextView
                android:id="@+id/tv_1"
                android:text="男童圆领毛衣KGME081101"
                android:textSize="18dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_2"
                android:layout_below="@+id/tv_1"
                android:text="市场价:￥"
                android:textSize="18dp"
                android:layout_marginTop="13dp"
                android:layout_marginLeft="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_markmoney"
                android:text="360.00"
                android:layout_below="@+id/tv_1"
                android:layout_marginLeft="105dp"
                android:textSize="18dp"
                android:layout_marginTop="13dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_3"
                android:text="会员价:￥"
                android:textSize="18dp"
                android:textColor="#FF0000"
                android:layout_below="@+id/tv_2"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="13dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_vipmoney"
                android:text="182.00"
                android:textSize="18dp"
                android:textColor="#FF0000"
                android:layout_below="@+id/tv_2"
                android:layout_marginLeft="105dp"
                android:layout_marginTop="13dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_4"
                android:text="商品评级:"
                android:textSize="18dp"
                android:layout_below="@+id/tv_1"
                android:layout_alignParentRight="true"
                android:layout_marginRight="110dp"
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <RatingBar
                android:id="@+id/rb_star"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:layout_marginTop="21dp"
                android:layout_marginRight="38dp"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/tv_1"
                android:progressDrawable="@drawable/layer_list_ratingbar_bg"
                android:isIndicator="true"
                android:rating="3.5"/>

            <TextView
                android:id="@+id/tv_5"
                android:text="颜    色:"
                android:textSize="18dp"
                android:layout_below="@+id/tv_3"
                android:layout_marginTop="13dp"
                android:layout_marginLeft="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Spinner
                android:spinnerMode="dropdown"
                android:id="@+id/spinner1"
                android:layout_below="@+id/tv_3"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="90dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="尺寸:"
                android:layout_below="@+id/tv_3"
                android:textSize="18dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="120dp"
                android:layout_marginTop="13dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Spinner
                android:spinnerMode="dropdown"
                android:id="@+id/spinner2"
                android:layout_below="@+id/tv_3"
                android:layout_marginTop="15dp"
               android:layout_alignParentRight="true"
                android:layout_marginRight="45dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="数    量:"
                android:layout_below="@+id/tv_5"
                android:textSize="18dp"
                android:layout_marginTop="13dp"
                android:layout_marginLeft="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/et"
                android:layout_below="@+id/tv_5"
                android:layout_width="50dp"
                android:layout_height="25dp"
                android:background="@drawable/bg_edittext"
                android:layout_marginTop="17dp"
                android:layout_marginLeft="90dp"
                android:textSize="12dip"
                android:singleLine="true"
                android:gravity="center"
                android:hint="1"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/item_qiegexian"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp">
            <Button
                android:id="@+id/buy"
                android:text="加入购物车"
                android:textSize="18dp"
                android:textColor="#FFFFFF"
                android:layout_centerVertical="true"
                android:layout_marginLeft="25dp"
                android:layout_alignParentLeft="true"
                android:background="@drawable/button_long"
                android:layout_width="140dp"
                android:layout_height="40dp"/>
            <Button
                android:id="@+id/collect"
                android:text="收藏"
                android:textSize="18dp"
                android:textColor="#BFBFBF"
                android:layout_centerVertical="true"
                android:layout_marginRight="25dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/product_detail_shop_selected"
                android:layout_width="140dp"
                android:layout_height="40dp"/>
        </RelativeLayout>


    </LinearLayout>

</FrameLayout>