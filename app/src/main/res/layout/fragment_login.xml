<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <FrameLayout
        android:id="@+id/title_usercenter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/head_bg">

        <TextView
            android:id="@+id/head_back_login"
            style="@style/style_15_EBEBEB_BOLD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="5dp"
            android:background="@drawable/selector_headbutton"
            android:clickable="true"
            android:padding="8dp"
            android:text=" 账户中心 "/>

        <TextView
            style="@style/style_18_BEBEBE_BOLD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="登录"/>


    </FrameLayout>

    <LinearLayout
        android:paddingTop="5dip"
        android:id="@+id/login_name_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="5.0dip"
        android:layout_marginTop="10.0dip"
        android:background="@drawable/shape_rounded_selectable"
        android:orientation="horizontal">

        <TextView
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:text="登 陆"
            android:textSize="15.0sp"/>

        <EditText
            android:id="@+id/login_name_edit"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textSize="15.0sp"/>
    </LinearLayout>

    <LinearLayout
        android:paddingTop="5dip"
        android:id="@+id/login_pwd_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_name_layout"
        android:layout_centerHorizontal="true"
        android:layout_margin="5.0dip"
        android:background="@drawable/shape_rounded_selectable"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:text="密 码"
            android:textSize="15.0sp"/>

        <EditText
            android:id="@+id/login_pwd_edit"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:password="true"
            android:textColor="#000"
            android:textSize="15.0sp"/>
    </LinearLayout>

    <CheckBox
        android:id="@+id/remember_pwd_checkbox"
        android:layout_width="126dp"
        android:layout_height="wrap_content"
        android:checked="true"
        android:text="记住密码"
        android:textColor="@android:color/black"
        android:textSize="18sp"/>

    <TextView
        android:layout_marginTop="10dip"
        android:id="@+id/login_text"
        android:layout_width="200dip"
        android:layout_height="wrap_content"
        android:layout_below="@id/remember_pwd_checkbox"
        android:layout_gravity="center"
        android:background="@drawable/button_long"
        android:gravity="center"
        android:text="登陆"/>

    <TextView
        android:layout_marginTop="5dip"
        android:id="@+id/register_txt"
        android:layout_width="200dip"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_text"
        android:layout_gravity="center"
        android:background="@drawable/button_long"
        android:gravity="center"
        android:text="注册"/>

</LinearLayout>